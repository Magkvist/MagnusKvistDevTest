<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp" android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Address"
        android:id="@+id/addressDetText"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"

        android:layout_alignParentStart="true"

        android:layout_below="@+id/orgNrDetText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="OrgNr"
        android:id="@+id/orgNrDetText"
        android:layout_below="@+id/innerLayout"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Registered"
        android:id="@+id/regDetText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/addressDetText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="employees"
        android:id="@+id/employeesDetText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/regDetText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Homepage"
        android:id="@+id/homepageDetText"
        android:layout_below="@+id/employeesDetText"
        android:layout_alignStart="@+id/employeesDetText"
        android:layout_marginTop="5dp"
        android:autoLink="web"
        android:layout_marginBottom="10dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/innerLayout"
        android:background="#82d5ff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="orgName"
            android:id="@+id/orgNameDetText"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:layout_alignParentEnd="false"
            android:layout_toLeftOf="@+id/closeButton"
            android:gravity="center_horizontal"
            android:lines="1"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:id="@+id/closeButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/abc_ic_clear_mtrl_alpha" />
    </RelativeLayout>

</RelativeLayout>